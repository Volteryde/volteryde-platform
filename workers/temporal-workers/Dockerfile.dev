# ============================================================================
# Volteryde Temporal Workers - Development Docker Build
# ============================================================================
# This Dockerfile is optimized for development with hot-reload support
# Using Debian-based image for better compatibility with Temporal native modules

FROM node:20-slim

WORKDIR /app

# Install build dependencies for native modules
RUN apt-get update && apt-get install -y \
    python3 \
    make \
    g++ \
    dumb-init \
    && rm -rf /var/lib/apt/lists/*

# Install pnpm
RUN npm install -g pnpm@8

# Create non-root user and set permissions
RUN groupadd -g 1001 nodejs && \
    useradd -r -u 1001 -g nodejs nodejs && \
    mkdir -p /home/nodejs && \
    chown -R nodejs:nodejs /home/nodejs && \
    chown -R nodejs:nodejs /app

# Copy monorepo workspace files with ownership
COPY --chown=nodejs:nodejs pnpm-workspace.yaml ./
COPY --chown=nodejs:nodejs package.json ./

# Copy pnpm-lock.yaml if it exists
COPY --chown=nodejs:nodejs pnpm-lock.yaml* ./
COPY --chown=nodejs:nodejs .npmrc* ./

# Switch to non-root user BEFORE fetch/install
USER nodejs

# Copy worker package.json
COPY --chown=nodejs:nodejs workers/temporal-workers/package.json ./workers/temporal-workers/

# Copy shared packages if they exist
COPY --chown=nodejs:nodejs packages ./packages

# Install all dependencies
# Note: running as nodejs user now
RUN pnpm config set fetch-retries 5 && \
    pnpm config set fetch-retry-maxtimeout 120000 && \
    pnpm install

# Copy worker source code
COPY --chown=nodejs:nodejs workers/temporal-workers ./workers/temporal-workers

# Working directory for the worker
WORKDIR /app/workers/temporal-workers

# Use dumb-init to handle signals properly
ENTRYPOINT ["dumb-init", "--"]

# Start in development mode with hot-reload
CMD ["pnpm", "dev"]
