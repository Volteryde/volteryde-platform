# Environment
NODE_ENV=development
PORT=3000

# Database - PostgreSQL
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=volteryde
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your-postgres-password-here
DATABASE_URL=
POSTGRES_PASSWORD=your-postgres-password-here

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=

# Temporal Workflow Engine

# ============================================================================
# OPTION 1: Temporal Cloud with API Key (RECOMMENDED - Production)
# ============================================================================
# Get these from: https://cloud.temporal.io/namespaces
TEMPORAL_ADDRESS=sa-east-1.aws.api.temporal.io:7233
TEMPORAL_NAMESPACE=your-temporal-namespace
TEMPORAL_API_KEY=your-api-key-here
TEMPORAL_TASK_QUEUE=volteryde-booking

# ============================================================================
# OPTION 2: Local Development (Docker - for testing only)
# ============================================================================
# TEMPORAL_ADDRESS=localhost:7233
# TEMPORAL_NAMESPACE=default
# TEMPORAL_TASK_QUEUE=volteryde-booking

# ============================================================================
# OPTION 3: Temporal Cloud with mTLS Certificates (Alternative)
# ============================================================================
# TEMPORAL_ADDRESS=your-namespace.a2b3c.tmprl.cloud:7233
# TEMPORAL_NAMESPACE=your-namespace.a2b3c
# TEMPORAL_CLIENT_CERT=/path/to/your/client.pem
# TEMPORAL_CLIENT_KEY=/path/to/your/client-key.key
# TEMPORAL_TASK_QUEUE=volteryde-booking

# Authentication & Security
JWT_SECRET=your-secret-key-change-in-production
JWT_ISSUER_URI=http://localhost:8080
JWT_EXPIRATION=86400

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# AWS Timestream (for Telematics Module)
TIMESTREAM_DATABASE=volteryde_telematics
TIMESTREAM_TABLE_LOCATIONS=vehicle_locations
TIMESTREAM_TABLE_DIAGNOSTICS=vehicle_diagnostics

# Service URLs (for Temporal activities)
NESTJS_API_URL=http://localhost:3000
SPRINGBOOT_API_URL=http://localhost:8080

# Frontend URLs (Dev Defaults)
NEXT_PUBLIC_LANDING_URL=http://localhost:4000
NEXT_PUBLIC_AUTH_FRONTEND_URL=http://localhost:4001
NEXT_PUBLIC_ADMIN_URL=http://localhost:4002
NEXT_PUBLIC_PARTNERS_URL=http://localhost:4003
NEXT_PUBLIC_SUPPORT_URL=http://localhost:4004
NEXT_PUBLIC_DISPATCH_URL=http://localhost:4005

# Internal Service Security
# This key is used to authenticate inter-service communication
# In production, use a strong random key stored in AWS Secrets Manager
INTERNAL_SERVICE_KEY=dev-internal-key-change-in-production

# External Services
PAYSTACK_SECRET_KEY=
PAYSTACK_PUBLIC_KEY=
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
SENDGRID_API_KEY=

# SMS Provider (Gatekeeper Pro) - Required for client-auth-service
SMS_PROVIDER_URL=https://api.gatekeeperpro.live
SMS_PROVIDER_API_KEY=your-sms-provider-api-key-here
SMS_PROVIDER_PROJECT_NAME=Volteryde
SMS_PROVIDER_SENDER_NAME=Volteryde

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002

# Documentation
DOCS_URL=http://localhost:4002

# Feature Flags
ENABLE_TEMPORAL_WORKFLOWS=true
ENABLE_REDIS_CACHE=true
ENABLE_METRICS=true

# Logging
LOG_LEVEL=info
MAPBOX_PUBLIC_TOKEN=
MAPBOX_SECRET_TOKEN=

# =============================================================================
# Supabase PostgreSQL Configuration (PRODUCTION)
# =============================================================================
# Using Supabase as managed PostgreSQL database for all microservices

# === Supabase Connection Pooler (IPv4 compatible) ===
SUPABASE_HOST=aws-0-sa-east-1.pooler.supabase.com
SUPABASE_PORT=6543
SUPABASE_DB=postgres
SUPABASE_USER=postgres.your-project-ref
SUPABASE_PASSWORD=your-supabase-password

# === Supabase API (for client SDKs) ===
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# === Per-Service Schema Mapping (Database-per-Domain) ===
AUTH_DATABASE_SCHEMA=svc_auth
CLIENT_AUTH_DATABASE_SCHEMA=svc_client_auth
USERS_DATABASE_SCHEMA=svc_users
PAYMENT_DATABASE_SCHEMA=svc_payment
FLEET_DATABASE_SCHEMA=svc_fleet
CHARGING_DATABASE_SCHEMA=svc_charging
BOOKING_DATABASE_SCHEMA=svc_booking
TELEMATICS_DATABASE_SCHEMA=svc_telematics
CORE_DATABASE_SCHEMA=svc_core
NOTIFICATIONS_DATABASE_SCHEMA=svc_notifications
