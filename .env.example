# Environment
NODE_ENV=development
PORT=3000

# Database - PostgreSQL
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=volteryde
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=postgres
DATABASE_URL=

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=

# Temporal Workflow Engine

# ============================================================================
# OPTION 1: Local Development (Docker)
# ============================================================================
# TEMPORAL_ADDRESS=localhost:7233
# TEMPORAL_NAMESPACE=default

# ============================================================================
# OPTION 2: Temporal Cloud with API Key (RECOMMENDED - Simpler)
# ============================================================================
# Get these from: https://cloud.temporal.io/namespaces
# TEMPORAL_ADDRESS=your-namespace.a2b3c.tmprl.cloud:7233
# TEMPORAL_NAMESPACE=your-namespace.a2b3c
# TEMPORAL_API_KEY=your-api-key-here

# ============================================================================
# OPTION 3: Temporal Cloud with mTLS Certificates (Traditional)
# ============================================================================
TEMPORAL_ADDRESS=your-namespace.a2b3c.tmprl.cloud:7233
TEMPORAL_NAMESPACE=your-namespace.a2b3c
TEMPORAL_CLIENT_CERT=/path/to/your/client.pem
TEMPORAL_CLIENT_KEY=/path/to/your/client-key.key

# Common Settings (for all options):
TEMPORAL_TASK_QUEUE=volteryde-booking

# Authentication & Security
JWT_SECRET=your-secret-key-change-in-production
JWT_ISSUER_URI=http://localhost:8080
JWT_EXPIRATION=86400

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# AWS Timestream (for Telematics Module)
TIMESTREAM_DATABASE=volteryde_telematics
TIMESTREAM_TABLE_LOCATIONS=vehicle_locations
TIMESTREAM_TABLE_DIAGNOSTICS=vehicle_diagnostics

# Service URLs (for Temporal activities)
NESTJS_API_URL=http://localhost:3000
SPRINGBOOT_API_URL=http://localhost:8080

# Internal Service Security
# This key is used to authenticate inter-service communication
# In production, use a strong random key stored in AWS Secrets Manager
INTERNAL_SERVICE_KEY=dev-internal-key-change-in-production

# External Services
PAYSTACK_SECRET_KEY=
PAYSTACK_PUBLIC_KEY=
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
SENDGRID_API_KEY=

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002

# Documentation
DOCS_URL=http://localhost:3002

# Feature Flags
ENABLE_TEMPORAL_WORKFLOWS=true
ENABLE_REDIS_CACHE=true
ENABLE_METRICS=true

# Logging
LOG_LEVEL=info
