# Copy this file to .env.local and fill in the values
# All API URLs are configured here - change once, applies everywhere

# Authentication Service
NEXT_PUBLIC_AUTH_SERVICE_URL=http://localhost:8081
NEXT_PUBLIC_AUTH_API_URL=http://localhost:8081/api/auth

# User Management Service
NEXT_PUBLIC_USER_API_URL=http://localhost:8082

# Payment Service
NEXT_PUBLIC_PAYMENT_API_URL=http://localhost:8084

# API Gateway (for production, all services go through gateway)
NEXT_PUBLIC_API_GATEWAY_URL=http://localhost:8082


# App URLs
NEXT_PUBLIC_APP_URL=http://localhost:4002
NEXT_PUBLIC_AUTH_FRONTEND_URL=http://localhost:4001
