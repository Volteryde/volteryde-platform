FROM node:20-alpine

WORKDIR /app

# Install pnpm and system deps
RUN npm install -g pnpm@9 && \
	apk add --no-cache dumb-init

# Create non-root user
RUN addgroup -g 1001 -S nodejs && \
	adduser -S nodejs -u 1001 && \
	chown -R nodejs:nodejs /app

# Copy lockfile and workspace config with ownership
COPY --chown=nodejs:nodejs pnpm-lock.yaml pnpm-workspace.yaml .npmrc* ./

# Switch user BEFORE fetching/installing
USER nodejs

# Fetch dependencies
RUN pnpm fetch

# Copy source code with ownership
COPY --chown=nodejs:nodejs . .

# Install dependencies from offline store
# This runs postinstall scripts (e.g. fumadocs-mdx) automatically if configured
RUN pnpm install -r

# Workdir
WORKDIR /app/apps/admin-dashboard

# Entrypoint
ENTRYPOINT ["dumb-init", "--"]

# CMD
ENV HOST=0.0.0.0
CMD ["pnpm", "dev"]
