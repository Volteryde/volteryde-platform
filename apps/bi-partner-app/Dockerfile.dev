# syntax=docker/dockerfile:1.4
# ============================================================================
# Volteryde BI Partner App - Development Dockerfile
# ============================================================================
# Uses BuildKit cache mounts for faster dependency installation

FROM node:20-alpine

WORKDIR /app

# Set pnpm environment
ENV PNPM_HOME="/pnpm"
ENV PATH="$PNPM_HOME:$PATH"

# Install pnpm and system deps
RUN corepack enable && corepack prepare pnpm@9 --activate && \
	apk add --no-cache dumb-init

# Create non-root user
RUN addgroup -g 1001 -S nodejs && \
	adduser -S nodejs -u 1001 && \
	chown -R nodejs:nodejs /app

# Copy lockfile and workspace config with ownership
COPY --chown=nodejs:nodejs pnpm-lock.yaml pnpm-workspace.yaml .npmrc* ./

# Ensure .next folder exists and has correct permissions (fixes anonymous volume permissions)
RUN mkdir -p apps/bi-partner-app/.next && chown -R nodejs:nodejs apps/bi-partner-app/.next

# Switch user BEFORE fetching/installing
USER nodejs

# Fetch dependencies with BuildKit cache mount
RUN --mount=type=cache,id=pnpm,target=/pnpm/store,uid=1001,gid=1001 \
	pnpm fetch

# Copy source code with ownership
COPY --chown=nodejs:nodejs . .

# Install dependencies from offline store with cache mount
RUN --mount=type=cache,id=pnpm,target=/pnpm/store,uid=1001,gid=1001 \
	pnpm install -r

# Workdir
WORKDIR /app/apps/bi-partner-app

# Entrypoint
ENTRYPOINT ["dumb-init", "--"]

# CMD
ENV HOSTNAME="0.0.0.0"
CMD ["pnpm", "dev"]
