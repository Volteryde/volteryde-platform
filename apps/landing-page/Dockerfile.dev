FROM node:20-alpine

WORKDIR /app

# Install pnpm and system deps
RUN npm install -g pnpm@9 && \
	apk add --no-cache dumb-init

# Create non-root user
RUN addgroup -g 1001 -S nodejs && \
	adduser -S nodejs -u 1001 && \
	chown -R nodejs:nodejs /app

# Copy lockfile and workspace config with ownership
COPY --chown=nodejs:nodejs pnpm-lock.yaml pnpm-workspace.yaml .npmrc* ./

# Ensure .next folder exists and has correct permissions (fixes anonymous volume permissions)
RUN mkdir -p apps/landing-page/.next && chown -R nodejs:nodejs apps/landing-page/.next

# Switch user BEFORE fetching/installing
USER nodejs

# Fetch dependencies
RUN pnpm fetch

# Copy source code with ownership
COPY --chown=nodejs:nodejs . .

# Install dependencies from offline store
RUN pnpm install -r

# Workdir
WORKDIR /app/apps/landing-page

# Entrypoint
ENTRYPOINT ["dumb-init", "--"]

# CMD
ENV HOSTNAME="0.0.0.0"
CMD ["pnpm", "dev"]
