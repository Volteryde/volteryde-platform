# ============================================================================
# Volteryde NestJS Backend - Development Docker Build
# ============================================================================
# This Dockerfile is optimized for development with hot-reload support
# Uses BuildKit cache mounts for faster dependency installation

FROM node:20-alpine

WORKDIR /app

# Set pnpm environment
ENV PNPM_HOME="/pnpm"
ENV PATH="$PNPM_HOME:$PATH"

# Install pnpm via corepack and system deps
RUN corepack enable && corepack prepare pnpm@9 --activate && \
    apk add --no-cache dumb-init

# Create non-root user and set permissions for /app
RUN addgroup -g 1001 -S nodejs && \
    adduser -S nodejs -u 1001 && \
    chown -R nodejs:nodejs /app

# Copy lockfile and workspace config with ownership
COPY --chown=nodejs:nodejs pnpm-lock.yaml pnpm-workspace.yaml .npmrc* ./

# Switch to non-root user BEFORE fetching/installing
USER nodejs

# Fetch dependencies with BuildKit cache mount (cached step)
RUN --mount=type=cache,id=pnpm,target=/pnpm/store,uid=1001,gid=1001 \
    pnpm fetch

# Copy source code with ownership
COPY --chown=nodejs:nodejs . .

# Install dependencies from offline store with cache mount
RUN --mount=type=cache,id=pnpm,target=/pnpm/store,uid=1001,gid=1001 \
    pnpm install -r

# Working directory for the service
WORKDIR /app/services/volteryde-nest

# Use dumb-init to handle signals properly
ENTRYPOINT ["dumb-init", "--"]

# Start in development mode with hot-reload
CMD ["pnpm", "start:dev"]
