{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../dist/volteryde-api",
    "module": "commonjs",
    "declaration": false,
    "target": "ES2021",
    "sourceMap": true,
    "baseUrl": "../",
    "incremental": true,
    "paths": {
      "@app/shared/*": ["libs/shared/src/*"]
    },
    "types": []
  },
  "include": [
    "src/**/*",
    "../libs/shared/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "**/*spec.ts",
    "../libs/**/__tests__/**"
  ]
}